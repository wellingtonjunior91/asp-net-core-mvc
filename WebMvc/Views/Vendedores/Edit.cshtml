@model WebMvc.Models.ViewModels.VendedorFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Vendedores.Id" />
            <div class="form-group">
                <label asp-for="Vendedores.Nome" class="control-label"></label>
                <input asp-for="Vendedores.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.Email" class="control-label"></label>
                <input asp-for="Vendedores.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.DataAniversario" class="control-label"></label>
                <input asp-for="Vendedores.DataAniversario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.Salario" class="control-label"></label>
                <input asp-for="Vendedores.Salario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedores.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedores.DepartamentoId" asp-items="@(new SelectList(Model.Departamento, "Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" /> |
                <a asp-action="Index">Voltar para a listagem</a>
            </div>
        </form>
    </div>
</div>

